{
  "include": ["bin/**/*", "lib/**/*", "plugin/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "types": ["node", "babel-traverse"]
  }
}